<h1>Your Current Clients</h1>

<div class="row">
  <div class="col-md-12 well" align="center">

    <% if @clients.any?() %>
      <h3 class="well-header">Here are your clients:</h3>

      <ul>
        <% @clients.each() do |client| %>
          <li><a href="/clients/<%= client.id()%>"><%= client.name() %></a></li>
        <% end %>
      </ul>

    <% else %>

        <p class="well-header">There are no clients yet!</p>

    <% end %>

  </div>
</div>
<br>
<p><a href="/stylists">See Stylist List</a></p>
