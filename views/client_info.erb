<h4>Update <%= @client.name() %></h4>

<form action="/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your Client:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>


<h4>Delete <%= @client.name() %></h4>

<form action="/stylists/<%= @stylist.id() %>/clients/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete <%= @client.name() %></button>
</form>
